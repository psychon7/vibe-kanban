{
  "name": "vibe-kanban-workers",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "build": "tsc",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    
    "d1:create": "wrangler d1 create vibe-kanban-db",
    "d1:list": "wrangler d1 list",
    "d1:info": "wrangler d1 info vibe-kanban-db",
    
    "d1:migrate": "wrangler d1 migrations apply DB --local",
    "d1:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "d1:migrate:staging": "wrangler d1 migrations apply DB --env staging --remote",
    "d1:migrate:prod": "wrangler d1 migrations apply DB --env production --remote",
    "d1:migrate:list": "wrangler d1 migrations list DB",
    
    "d1:seed": "wrangler d1 execute DB --local --file=scripts/seed.sql",
    "d1:seed:staging": "wrangler d1 execute DB --env staging --remote --file=scripts/seed.sql",
    "d1:seed:prod": "wrangler d1 execute DB --env production --remote --file=scripts/seed.sql",
    
    "d1:query": "wrangler d1 execute DB --local",
    "d1:query:staging": "wrangler d1 execute DB --env staging --remote",
    "d1:query:prod": "wrangler d1 execute DB --env production --remote",
    
    "d1:reset": "rm -rf .wrangler/state && npm run d1:migrate",
    
    "r2:create": "wrangler r2 bucket create vibe-kanban-storage",
    "kv:create": "wrangler kv:namespace create CACHE",
    "kv:create:staging": "wrangler kv:namespace create CACHE --env staging",
    "kv:create:prod": "wrangler kv:namespace create CACHE --env production",
    
    "setup": "npm run d1:create && npm run r2:create && npm run kv:create",
    "setup:all-envs": "npm run kv:create && npm run kv:create:staging && npm run kv:create:prod",
    "test:local": "npm run d1:migrate && npm run d1:seed && npm run dev:local",
    
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "hono": "^4.11.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.4.5",
    "wrangler": "^3.60.0"
  }
}
